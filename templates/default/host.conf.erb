#
# Generated by Chef for <%= node['fqdn'] %>
# Do NOT modify this file by hand, changes will be overwritten.
#

# <%= @name -%><% if @comment -%><%= - @comment -%><% end -%>
host <%= @name %> {
<% if @identifier -%>  
  <%= @identifier %>; 
<% end -%>
<% if @address -%>  
  <%= @ip_version.eql?(:ipv6) ? 'fixed-address6' : 'fixed-address' %> <%= @address %>;
<% end -%>
<% unless nil_or_empty?(@parameters) -%>

  # Parameters
  <% property_sorted_hash(@parameters).each do |parameter, value| -%>
  <%= parameter -%> <%= value -%>;
  <% end -%>
<% end -%>
<% if @hostname -%>
  option host-name "<%= @hostname %>";
<% end -%>
<% unless nil_or_empty?(@options) -%>

  # Options
  <% property_sorted_hash(@options).each do |option, value| -%>
  option <%= option -%> <%= value -%>;
  <% end -%>
<% end -%>
}
