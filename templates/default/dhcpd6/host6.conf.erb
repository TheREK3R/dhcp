host <%= @name %> {
<% if @hostname -%>
  option host-name "<%= @hostname %>";
<% end -%>
<% if @hostidentifier -%>  
  host-identifier <%= @hostidentifier %>; 
<% end -%>
<% if @servername -%>  
  server-name "<%= @servername %>"; 
<% end -%>
<% if @ip6address -%>  
  fixed-address6 <%= @ip6address %>; 
<% end -%>
<% unless @parameters.empty? -%>
  <% @parameters.sort.each do |parameter| -%>
  <%= parameter -%>;
  <% end -%>
<% end -%>
<% unless @options.empty? -%>
  <% @options.sort.each do |option| -%>
  option <%= option -%>;
  <% end -%>
<% end -%>
}
